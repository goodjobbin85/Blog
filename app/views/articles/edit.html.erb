<% if @article.errors.any? %>
	<h2>There following errors prevented your entry from being saved:</h2>
	<ul>
		<% @article.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>


<h1>Edit Article </h1>

<%= form_for @article do |f| %>
	<%= f.label  "Name" %>
	<%= f.text_field :name %></br>

	<%= f.label "Title" %>
	<%= f.text_field :title %></br>

	<%= f.label "Description" %>
	<%= f.text_area :description %></br>

	<%= f.submit %>
	
<% end %>